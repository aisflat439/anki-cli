{
  "name": "anki-cli",
  "version": "0.1.1",
  "description": "A terminal-based flashcard application with spaced repetition",
  "author": "Devin Fitzsimons <aisflat439>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aisflat439/anki-cli"
  },
  "homepage": "https://github.com/aisflat439/anki-cli",
  "keywords": [
    "anki",
    "flashcards",
    "cli",
    "terminal",
    "spaced-repetition",
    "study",
    "tui",
    "opentui"
  ],
  "bin": {
    "anki": "./src/index.tsx",
    "anki-mcp": "./src/mcp/server.ts"
  },
  "module": "src/index.tsx",
  "type": "module",
  "files": [
    "src",
    "README.md"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "dev:inspect": "bun --inspect run src/index.tsx 2>&1 | tee inspect.log",
    "dev:log": "tail -f dev.log",
    "mcp": "bun run src/mcp/server.ts",
    "mcp:inspect": "npx @modelcontextprotocol/inspector bun run mcp",
    "db:reset": "bun src/db/scripts/reset.ts",
    "db:seed": "bun src/db/scripts/seed.ts",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/yargs": "^17.0.34",
    "better-sqlite3": "^12.4.1",
    "clipboardy": "^5.0.0",
    "drizzle-kit": "^0.31.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@opentui/core": "^0.1.39",
    "@opentui/react": "^0.1.39",
    "@tanstack/react-query": "^5.90.8",
    "drizzle-orm": "^0.44.7",
    "react": "^19.1.1",
    "yargs": "^18.0.0"
  }
}
